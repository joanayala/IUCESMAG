<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notices_fragment_layout"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:text="Enlaces"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:id="@+id/mapacesmag"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/facebook_background"
                        android:layout_margin="20dp"
                        android:id="@+id/facebooklink"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/facebook"/>
                        <View
                            android:layout_width="1dp"
                            android:background="#f5f5f5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Facebook CESMAG"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/twitter_background"
                        android:layout_marginTop="10dp"
                        android:id="@+id/twitterlink"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/twitter"/>
                        <View
                            android:layout_width="1dp"
                            android:background="#f5f5f5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Twitter CESMAG"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="Enviar a Gmail"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/gmail_background"
                        android:layout_margin="20dp"
                        android:id="@+id/gmaillink"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/gmail"/>
                        <View
                            android:layout_width="1dp"
                            android:background="#f5f5f5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Gmail CESMAG"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="Sitio web de CESMAG"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/cesmag_background"
                        android:layout_margin="20dp"
                        android:id="@+id/cesmaglink"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@mipmap/cesmag"/>
                        <View
                            android:layout_width="1dp"
                            android:background="#f5f5f5"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="iucesmag.edu.co"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="UNICESMAG‏ (Play Store)"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:id="@+id/gamelink"
                        android:background="@drawable/game_background"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@mipmap/gameicon"/>
                        <View
                            android:layout_width="1dp"
                            android:background="#003d69"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="UNICESMAG‏"
                            android:textColor="#003d69"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>

